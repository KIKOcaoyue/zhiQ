<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OtherinforActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/otherusernametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是别人的用户名啊"
            android:gravity="center"
            android:textColor="@color/zhiqpurple"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/otherintrotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是别人的简介"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsendmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_sixin"
            android:text="发信息"
            android:background="@drawable/trp_background"
            android:visibility="visible" />
        <!---->

        <Button
            android:id="@+id/btnaddfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/trp_background"
            android:drawableTop="@drawable/ic_jiahaoyou_"
            android:text="加好友" />
        <!---->

    </LinearLayout>
</LinearLayout>