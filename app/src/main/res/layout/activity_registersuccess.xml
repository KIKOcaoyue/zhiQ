<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegistersuccessActivity">

    <TextView
        android:id="@+id/reg2txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册成功"
        android:gravity="center"
        android:textColor="@color/zhiqblue"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/newnametxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newidtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相信您会有一段美好的旅程。"
        android:gravity="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnconfirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/trp_background"
        android:drawableLeft="@drawable/ic_finish"
        android:text="点击完成"
        />
    <!---->
</LinearLayout>