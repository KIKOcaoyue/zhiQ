<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FriendinforActivity">

    <TextView
        android:id="@+id/friendnametxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是好友的名字啊"
        android:textColor="@color/colorAccent"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/friendintrotxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是好友的简介"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textview100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你们成为好友已经" />

    <TextView
        android:id="@+id/frienddaytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100天啦"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btndeletefriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除好友" />
</LinearLayout>