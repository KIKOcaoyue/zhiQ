<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/topictxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="这是标题啊"
            android:textColor="@color/zhiqyellow"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/introtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="这是简介啊" />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/zhiqwhite"
            android:visibility="visible" />

        <TextView
            android:id="@+id/authoridtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是回答者的id"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/answertxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是回答啊"
            android:textSize="24sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnthumbsup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_all_shape"
            android:text="赞一个(10)" />

        <Button
            android:id="@+id/btnreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_all_shape"
            android:text="评论(3)" />

        <Button
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_all_shape"
            android:text="下一个回答" />

        <Button
            android:id="@+id/btnanswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_all_shape"
            android:text="回答该问题" />
    </LinearLayout>
</LinearLayout>